{
  "openapi": "3.0.0",
  "info": {
    "title": "KBlocks API",
    "version": "1.0.0",
    "description": "API for managing Kubernetes and cloud resources with KBlocks."
  },
  "servers": [
    {
      "url": "http://localhost:3001"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Root endpoint",
        "responses": {
          "200": {
            "description": "Returns a welcome message",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/resources": {
      "get": {
        "summary": "Get all resources",
        "responses": {
          "200": {
            "description": "Returns a list of resources",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "objects": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/ObjectEvent"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/projects": {
      "get": {
        "summary": "Get projects",
        "responses": {
          "200": {
            "description": "Returns a list of projects",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Project"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/categories": {
      "get": {
        "summary": "Get categories",
        "responses": {
          "200": {
            "description": "Returns a list of categories",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": {
                    "$ref": "#/components/schemas/Category"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/sign-in": {
      "get": {
        "summary": "Initiate GitHub OAuth sign-in",
        "responses": {
          "302": {
            "description": "Redirects to GitHub OAuth"
          }
        }
      }
    },
    "/api/auth/sign-out": {
      "get": {
        "summary": "Sign out the user",
        "responses": {
          "302": {
            "description": "Redirects to homepage after sign-out"
          }
        }
      }
    },
    "/api/users": {
      "get": {
        "summary": "List all users",
        "responses": {
          "200": {
            "description": "Returns a list of users",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/events": {
      "post": {
        "summary": "Publish an event to the events stream",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/WorkerEvent"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Event published successfully"
          }
        }
      }
    },
    "/api/resources/{group}/{version}/{plural}/{system}/{namespace}/{name}": {
      "parameters": [
        {
          "name": "group",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "version",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "plural",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "system",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "namespace",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "name",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "summary": "Get specific resource",
        "responses": {
          "200": {
            "description": "The requested resource",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiObject"
                }
              }
            }
          }
        }
      },
      "patch": {
        "summary": "Update specific resource",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ApiObject"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Patch request accepted"
          }
        }
      },
      "delete": {
        "summary": "Delete specific resource",
        "responses": {
          "200": {
            "description": "Delete request accepted"
          }
        }
      }
    },
    "/api/resources/{group}/{version}/{plural}": {
      "post": {
        "summary": "Create a resource",
        "parameters": [
          {
            "name": "system",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ApiObject"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Create request accepted"
          }
        }
      }
    },
    "/api/resources/{group}/{version}/{plural}/{system}/{namespace}/{name}/logs": {
      "get": {
        "summary": "Get logs for a specific resource",
        "responses": {
          "200": {
            "description": "Logs for the resource",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "objUri": {
                      "type": "string"
                    },
                    "logs": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/WorkerEvent"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/resources/{group}/{version}/{plural}/{system}/{namespace}/{name}/events": {
      "get": {
        "summary": "Get events for a specific resource",
        "responses": {
          "200": {
            "description": "Events for the resource",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "objUri": {
                      "type": "string"
                    },
                    "events": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/WorkerEvent"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ObjectEvent": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "object": {
            "$ref": "#/components/schemas/ApiObject"
          },
          "objUri": {
            "type": "string"
          },
          "objType": {
            "type": "string"
          },
          "reason": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "ApiObject": {
        "type": "object",
        "properties": {
          "apiVersion": {
            "type": "string"
          },
          "kind": {
            "type": "string"
          },
          "metadata": {
            "type": "object"
          },
          "spec": {
            "type": "object"
          }
        }
      },
      "Category": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "icon": {
            "type": "string"
          },
          "color": {
            "type": "string"
          },
          "docslink": {
            "type": "string",
            "format": "uri"
          }
        }
      },
      "Project": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "organization": {
            "type": "string"
          }
        }
      },
      "WorkerEvent": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "objUri": {
            "type": "string"
          },
          "object": {
            "$ref": "#/components/schemas/ApiObject"
          },
          "event": {
            "type": "object",
            "properties": {
              "reason": {
                "type": "string"
              },
              "message": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}